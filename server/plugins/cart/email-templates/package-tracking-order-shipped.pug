include includes/html-body.pug
    div(style="padding:0 20px: width:100%")
        table(cellspacing="0" cellpadding="0" border="0" width="100%" align="center" style="max-width: 602px")
            tr: td(style="font-size: 0; text-align: center; padding: 16px 0; border-bottom:1px solid rgb(234,234,234);")
                div(style="text-align:center;")
                    a(href=`${baseUrl}`)
                        img(src=`${tenantLogo}` alt="logo" style="border-style: none; outline: none")
                div
                    table(cellspacing="0" cellpadding="0" border="0" width="100%")
                        tr
                            td(style="text-align:center; font-size:18px; padding:7px 20px; font-family:Montserrat, Arial, sans-serif; line-height:1.7") Just shipped!

            tr: td
                div(style="text-align:center; padding:10px 0; font-size:18px; line-height:30px; color:#249c32") Great news! Your recent order has shipped to the following address:

            tr: td
                div(style="padding:10px 0")
                    include includes/address.pug

            if trackingUrl
                tr: td(style="text-align:center")
                    a(href=`${trackingUrl}` style="background-color:red; color:white; padding:10px; font-size:14px; font-weight:bold") TRACK PACKAGE
                    div(style="padding:10px 0") Shipment tracking may take up to 24 hours to appear

            tr: td(style="text-align:left")
                table(cellspacing="0" cellpadding="2" border="0" width="100%" style="background-color:#e4e4e4;")
                    tr
                        td(style="padding:5px 10px; font-weight:bold") Order number:
                        td(style="padding:5px 10px;") #{orderNumber}
                    tr
                        td(style="padding:5px 10px; font-weight:bold") Order date:
                        td(style="padding:5px 10px;") #{orderDate}
                    tr
                        td(style="padding:5px 10px; font-weight:bold") Tracking number:
                        td(style="padding:5px 10px;") #{trackingNumber}

            if trackingEvents
                tr: td(style="text-align:left; padding:20px 0")
                    include includes/package-tracking-events.pug

            tr: td
                table(cellspacing="0" cellpadding="0" border="0" width="100%")
                    tr: td(style="padding:20px 0 20px 0; font-weight:bold; border-bottom:1px solid rgb(234,234,234);")
                        div Thank you!
                        div #{brandName}
